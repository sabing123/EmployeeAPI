<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnshowemployee"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:text="Show All Employee"
    android:layout_gravity="center"
    android:layout_marginTop="30sp"
    />

    <Button
        android:id="@+id/btnregisteremployee"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Register Employee"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        />

    <Button
        android:id="@+id/btnsearchemployee"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Search Employee"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        />

    <Button
        android:id="@+id/btnmanageemployee"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Update/Delete Employee"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        />

</LinearLayout>